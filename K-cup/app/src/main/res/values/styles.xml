<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="style_no_need_player" parent="AppTheme.NoActionBar">
        <item name="colorAccent">@android:color/black</item>
        <item name="colorPrimaryDark">@color/yellow</item>
        <item name="colorPrimary">@android:color/white</item>
    </style>

    <style name="style_challenge" parent="AppTheme.NoActionBar">
        <item name="colorPrimaryDark">@color/red</item>
    </style>

    <style name="style_choice" parent="AppTheme.NoActionBar">
        <item name="colorPrimaryDark">@color/blue</item>
    </style>

    <style name="style_new_rule" parent="AppTheme.NoActionBar">
        <item name="colorPrimaryDark">@color/orange</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
